        <property name="appno" type="string">
            <column name="appno" length="20"/>
        </property>
        <property name="collateralid" type="integer">
            <column name="collateralid"/>
        </property>
        <property name="requestingofficer" type="string">
            <column name="requestingofficer" length="50"/>
        </property>
        <property name="department" type="string">
            <column name="department" length="50"/>
        </property>
        <property name="appraisaldate" type="timestamp">
            <column name="appraisaldate" length="23"/>
        </property>
        <property name="appraiser" type="string">
            <column name="appraiser" length="50"/>
        </property>
        <property name="reviewedby" type="string">
            <column name="reviewedby" length="50"/>
        </property>
        <property name="revieweddate" type="timestamp">
            <column name="revieweddate" length="23"/>
        </property>
        <property name="status" type="string">
            <column name="status" length="2"/>
        </property>
        <property name="statusdate" type="timestamp">
            <column name="statusdate" length="23"/>
        </property>
        <property name="acctnumber" type="string">
            <column name="acctnumber" length="50"/>
        </property>
        <property name="cardno" type="string">
            <column name="cardno" length="50"/>
        </property>
        <property name="acctname" type="string">
            <column name="acctname" length="300"/>
        </property>
        <property name="bankname" type="string">
            <column name="bankname" length="50"/>
        </property>
        <property name="branch" type="string">
            <column name="branch" length="100"/>
        </property>
        <property name="remarks" type="string">
            <column name="remarks" length="50"/>
        </property>
        <property name="appraisedvalue" type="big_decimal">
            <column name="appraisedvalue" precision="20"/>
        </property>
        <property name="appvalpercent" type="big_decimal">
            <column name="appvalpercent" precision="20"/>
        </property>
        <property name="marketvalue" type="big_decimal">
            <column name="marketvalue" precision="20"/>
        </property>
        <property name="loanablepercent" type="big_decimal">
            <column name="loanablepercent" precision="20"/>
        </property>
        <property name="loanablevalue" type="big_decimal">
            <column name="loanablevalue" precision="20"/>
        </property>
        <property name="marketpercent" type="big_decimal">
            <column name="marketpercent" precision="20"/>
