<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.coopdb.data.Tbotheraccounts" table="TBOTHERACCOUNTS" catalog="AcaciaAyalaCoreDB" schema="dbo" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="cifno" type="string">
            <column name="cifno" length="50"/>
        </property>
        <property name="recordtype" type="string">
            <column name="recordtype" length="50"/>
        </property>
        <property name="creditor" type="string">
            <column name="creditor" length="100"/>
        </property>
        <property name="loantype" type="string">
            <column name="loantype" length="50"/>
        </property>
        <property name="creditbalance" type="big_decimal">
            <column name="creditbalance" precision="18"/>
        </property>
        <property name="monthamort" type="big_decimal">
            <column name="monthamort" precision="18"/>
        </property>
        <property name="creditcardcompany" type="string">
            <column name="creditcardcompany" length="100"/>
        </property>
        <property name="cardno" type="string">
            <column name="cardno" length="50"/>
        </property>
        <property name="creditlimit" type="big_decimal">
            <column name="creditlimit" precision="18"/>
        </property>
        <property name="bankname" type="string">
            <column name="bankname" length="100"/>
        </property>
        <property name="accounttype" type="string">
            <column name="accounttype" length="50"/>
        </property>
        <property name="accountno" type="string">
            <column name="accountno" length="50"/>
        </property>
        <property name="currentbalance" type="big_decimal">
            <column name="currentbalance" precision="18"/>
        </property>
    </class>
</hibernate-mapping>