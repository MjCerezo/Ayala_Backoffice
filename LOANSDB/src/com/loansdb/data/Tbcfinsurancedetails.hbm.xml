<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.loansdb.data.Tbcfinsurancedetails" table="TBCFINSURANCEDETAILS" catalog="LOANSDBSIT" schema="dbo" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="appno" type="string">
            <column name="appno" length="20"/>
        </property>
        <property name="assuredname" type="string">
            <column name="assuredname" length="300"/>
        </property>
        <property name="policyno" type="string">
            <column name="policyno" length="50"/>
        </property>
        <property name="typeinsurance" type="string">
            <column name="typeinsurance" length="5"/>
        </property>
        <property name="insurancecompany" type="string">
            <column name="insurancecompany" length="5"/>
        </property>
        <property name="coveragefrom" type="timestamp">
            <column name="coveragefrom" length="23"/>
        </property>
        <property name="coverageto" type="timestamp">
            <column name="coverageto" length="23"/>
        </property>
        <property name="propertyitem" type="string">
            <column name="propertyitem" length="100"/>
        </property>
        <property name="propertydesc" type="string">
            <column name="propertydesc" length="300"/>
        </property>
        <property name="locationrisk" type="string">
            <column name="locationrisk" length="50"/>
        </property>
    </class>
</hibernate-mapping>