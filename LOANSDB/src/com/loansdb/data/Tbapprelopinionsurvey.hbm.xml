<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.loansdb.data.Tbapprelopinionsurvey" table="TBAPPRELOPINIONSURVEY" catalog="LOANSDBSIT" schema="dbo" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="appraisalreportid" type="string">
            <column name="appraisalreportid" length="20"/>
        </property>
        <property name="appno" type="string">
            <column name="appno" length="20"/>
        </property>
        <property name="collateralid" type="integer">
            <column name="collateralid"/>
        </property>
        <property name="locationdescription" type="string">
            <column name="locationdescription" length="50"/>
        </property>
        <property name="lotarea" type="big_decimal">
            <column name="lotarea" precision="18"/>
        </property>
        <property name="value" type="big_decimal">
            <column name="value" precision="20"/>
        </property>
        <property name="sourceofinfo" type="string">
            <column name="sourceofinfo" length="50"/>
        </property>
    </class>
</hibernate-mapping>