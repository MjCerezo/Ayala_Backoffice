<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.loansdb.data.Tbappraisaldeposits" table="TBAPPRAISALDEPOSITS" catalog="LOANSDBSIT" schema="dbo" dynamic-insert="false" dynamic-update="false">
        <id name="appraisalreportid" type="string">
            <column name="appraisalreportid" length="20"/>
            <generator class="assigned"/>
        </id>
        <property name="appno" type="string">
            <column name="appno" length="20"/>
        </property>
        <property name="collateralid" type="string">
            <column name="collateralid" length="20"/>
        </property>
        <property name="requestingofficer" type="string">
            <column name="requestingofficer" length="50"/>
        </property>
        <property name="department" type="string">
            <column name="department" length="50"/>
        </property>
        <property name="appraisaldate" type="timestamp">
            <column name="appraisaldate" length="23"/>
        </property>
        <property name="reportdate" type="timestamp">
            <column name="reportdate" length="23"/>
        </property>
        <property name="appraiser" type="string">
            <column name="appraiser" length="50"/>
        </property>
        <property name="reviewedby" type="string">
            <column name="reviewedby" length="50"/>
        </property>
        <property name="revieweddate" type="timestamp">
            <column name="revieweddate" length="23"/>
        </property>
        <property name="status" type="string">
            <column name="status" length="2"/>
        </property>
        <property name="statusdate" type="timestamp">
            <column name="statusdate" length="23"/>
        </property>
        <property name="acctnumber" type="string">
            <column name="acctnumber" length="50"/>
        </property>
        <property name="registeredname" type="string">
            <column name="registeredname" length="100"/>
        </property>
        <property name="amount" type="big_decimal">
            <column name="amount" precision="20"/>
        </property>
        <property name="intrate" type="big_decimal">
            <column name="intrate" precision="20"/>
        </property>
        <property name="dateofplacement" type="timestamp">
            <column name="dateofplacement" length="23"/>
        </property>
        <property name="dateofmaturity" type="timestamp">
            <column name="dateofmaturity" length="23"/>
        </property>
        <property name="remarks" type="string">
            <column name="remarks" length="1000"/>
        </property>
    </class>
</hibernate-mapping>