<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.loansdb.data.Tbappraisaldetails" table="TBAPPRAISALDETAILS" catalog="LOANSDBSIT" schema="dbo" dynamic-insert="false" dynamic-update="false">
        <id name="id" type="integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="appraisalreportid" type="string">
            <column name="appraisalreportid" length="20"/>
        </property>
        <property name="collateraltype" type="string">
            <column name="collateraltype" length="20"/>
        </property>
        <property name="referenceno" type="string">
            <column name="referenceno" length="20"/>
        </property>
        <property name="collateralid" type="string">
            <column name="collateralid" length="20"/>
        </property>
        <property name="category" type="string">
            <column name="category" length="100"/>
        </property>
        <property name="declaredvalue" type="string">
            <column name="declaredvalue" length="300"/>
        </property>
        <property name="findings" type="string">
            <column name="findings" length="50"/>
        </property>
        <property name="remarks" type="string">
            <column name="remarks" length="300"/>
        </property>
        <property name="appraisalactivityid" type="integer">
            <column name="appraisalactivityid"/>
        </property>
    </class>
</hibernate-mapping>